=semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|

	=f.inputs do
		=f.input :email, :label => false, :placeholder => "Email"
		=f.input :first_name, :label => false, :placeholder => "First Name"
		=f.input :last_name, :label => false, :placeholder => "Last Name"
		=f.input :password, :label => false, :placeholder => "Password"
		=f.input :password_confirmation, :label => false, :placeholder => "Confirm Password"

	=f.inputs do
		%li Organization
		=f.input :signup_organization_id, :as => :select, :label => false, :collection => Organization.all.map{|x| [x.name, x.id]}
		=f.input :organization_code, :label => false, :placeholder => "Enter signup code if applicable"

	=f.actions do
		=f.action :submit, :as => :button, :button_html => {:value => "Sign Up"}, :label => 'Sign Up'
